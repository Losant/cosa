{
  "name": "cosa",
  "version": "5.0.0",
  "description": "Cosa Models for MongoDB",
  "main": "lib/index.js",
  "engines": {
    "node": ">=12",
    "yarn": ">=1.2.1"
  },
  "scripts": {
    "lint": "esw . --ext .js",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "lint:changed": "lint-staged",
    "reinstall": "rm -rf node_modules && yarn install",
    "test": "NODE_ENV='test' COSA_DB_URI='mongodb://localhost:27017/test' mocha",
    "test-debug": "yarn test --debug-brk",
    "doc": "documentation build lib/index.js -f md --github > API.md"
  },
  "author": "Losant <hello@losant.com>",
  "license": "MIT",

  "bugs": {
    "url": "https://github.com/Losant/cosa/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Losant/cosa.git"
  },
  "lint-staged": {
    "*.js": "esw"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "bson": "~1.1.5",
    "clone": "^2.1.2",
    "debug": "^4.2.0",
    "defaults": "^1.0.3",
    "error": "^7.0.2",
    "etag": "^1.8.1",
    "@hapi/joi": "^17.1.1",
    "mongodb": "~3.6.2",
    "mongodb-extended-json": "~1.11.0",
    "object-assign": "^4.1.1",
    "object-path": "^0.11.5",
    "omnibelt": "^2.0.1"
  },
  "devDependencies": {
    "@losant/eslint-config-losant": "^1.4.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-datetime": "^1.7.0",
    "documentation": "^13.1.0",
    "mocha": "^8.2.1",
    "string-template": "^1.0.0"
  },
  "eslintConfig": {
    "extends": "@losant/eslint-config-losant/env/node"
  },
  "eslintIgnore": [
    "lib/array.js",
    "lib/date.js",
    "lib/defined-object.js",
    "lib/immutable.js",
    "lib/object.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "mocha": {
    "require": "chai",
    "reporter": "spec",
    "ui": "bdd",
    "check-leaks": true
  }
}
